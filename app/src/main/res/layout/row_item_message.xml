    <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
                 xmlns:app="http://schemas.android.com/apk/res-auto"
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:gravity="center_vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/row_item_message_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/date"
                android:textSize="10dp"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="@dimen/nav_vertical_margin"
                android:layout_marginRight="@dimen/nav_vertical_margin"
                android:layout_marginBottom="5dp"/>

            <android.support.v7.widget.CardView
                android:id="@+id/row_item_message_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/nav_vertical_margin"
                android:layout_marginRight="@dimen/nav_vertical_margin"
                android:layout_marginBottom="10dp"
                app:cardElevation="@dimen/card_elevation">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/row_item_message"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/rowitem_vertical_margin"
                        android:text="@string/messages"/>
                  </LinearLayout>
            </android.support.v7.widget.CardView>
        </LinearLayout>
    </FrameLayout>
