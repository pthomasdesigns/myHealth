<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorPrimary">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="@dimen/nav_vertical_margin"
        android:layout_marginRight="@dimen/nav_vertical_margin"
        android:layout_marginTop="40dp">

        <android.support.v7.widget.CardView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:elevation="12dp"
            android:id="@+id/view2"
            app:cardCornerRadius="30dp"
            android:layout_centerHorizontal="true"
            android:paddingTop="@dimen/nav_vertical_margin"
            android:innerRadius="0dp"
            android:shape="ring"
            android:thicknessRatio="1.9">
            <ImageView
                android:layout_height="80dp"
                android:layout_width="match_parent"
                android:id="@+id/user_image"
                android:src="@drawable/user"
                android:layout_alignParentTop="true"
                android:layout_gravity="center">
            </ImageView>
        </android.support.v7.widget.CardView>

        <TextView
            android:id="@+id/nav_view_userid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/nav_vertical_margin"
            android:paddingBottom="@dimen/nav_vertical_margin"
            android:text="Test User"
            android:textAppearance="@style/NavBarTitle" />

    </LinearLayout>
</LinearLayout>
