<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:app="http://schemas.android.com/apk/res-auto"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:gravity="center_vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
    <TextView
        android:id="@+id/visit_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/date"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="@dimen/nav_vertical_margin"
        android:layout_marginBottom="5dp"/>

    <android.support.v7.widget.CardView
        android:id="@+id/view_visits"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/nav_vertical_margin"
        android:layout_marginRight="@dimen/nav_vertical_margin"
        android:layout_marginBottom="10dp"
        app:cardElevation="@dimen/card_elevation">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/visit_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:paddingLeft="10dp"
                android:text="@string/medical_visits"/>
            <TextView
                android:id="@+id/provider_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="5dp"
                android:paddingLeft="10dp"
                android:textStyle="bold"
                android:text="@string/medical_visits"/>
            <TextView
                android:id="@+id/provider_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="5dp"
                android:paddingLeft="10dp"
                android:layout_marginBottom="10dp"
                android:textSize="10dp"
                android:text="@string/medical_visits"/>
        </LinearLayout>
    </android.support.v7.widget.CardView>
    </LinearLayout>
</FrameLayout>